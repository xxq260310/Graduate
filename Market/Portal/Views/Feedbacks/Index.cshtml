@model IEnumerable<Portal.Models.Feedback>
@using Portal.Authentication;
@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/LayoutForAdmin.cshtml";
}
<h2>Feedback</h2>

<p>
    @Html.ActionLinkAuthorized("Create New", "Create", false)
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Commodity.CommodityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reply)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdateDate)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLinkAuthorized("Edit", "Edit", new { id = item.FeedbackId }, false) &nbsp;
            @Html.ActionLinkAuthorized("Details", "Details", new { id = item.FeedbackId }, false) &nbsp;
            @Html.ActionLinkAuthorized("Delete", "Delete", new { id = item.FeedbackId }, false)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Commodity.CommodityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserProfile.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reply)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdateDate)
        </td>
    </tr>
}

</table>
